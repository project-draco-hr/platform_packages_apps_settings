{
  Settings.Secure.putInt(getContentResolver(),Settings.Secure.TOUCH_EXPLORATION_ENABLED,enabled ? 1 : 0);
  if (enabled) {
    SharedPreferences preferences=getActivity().getPreferences(Context.MODE_PRIVATE);
    final boolean launchAccessibilityTutorial=!preferences.getBoolean(KEY_ACCESSIBILITY_TUTORIAL_LAUNCHED_ONCE,false);
    if (launchAccessibilityTutorial) {
      preferences.edit().putBoolean(KEY_ACCESSIBILITY_TUTORIAL_LAUNCHED_ONCE,true).commit();
      Intent intent=new Intent(AccessibilityTutorialActivity.ACTION);
      getActivity().startActivity(intent);
    }
  }
}
