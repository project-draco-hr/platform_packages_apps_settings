{
  super(context,controller,R.layout.accessibility_tutorial_2,R.string.accessibility_tutorial_lesson_2_title);
  mAppsAdapter=new AppsAdapter(context,android.R.layout.simple_list_item_1,android.R.id.text1){
    @Override protected void populateView(    TextView text,    CharSequence label,    Drawable icon){
      text.setText(label);
      text.setCompoundDrawables(icon,null,null,null);
    }
  }
;
  mAppsAdapter.setOnHoverListener(this);
  ((ListView)findViewById(R.id.list_view)).setAdapter(mAppsAdapter);
  ((ListView)findViewById(R.id.list_view)).setOnScrollListener(this);
  setBackVisible(true);
}
