{
  super.showDialog(state);
  getContext().getContentResolver().registerContentObserver(Settings.System.getUriFor(Settings.System.SCREEN_BRIGHTNESS),true,mBrightnessObserver);
  getContext().getContentResolver().registerContentObserver(Settings.System.getUriFor(Settings.System.SCREEN_BRIGHTNESS_MODE),true,mBrightnessModeObserver);
  mRestoredOldState=false;
}
