{
  Resources res=getActivity().getResources();
  ChooseLockSettingsHelper helper=new ChooseLockSettingsHelper(getActivity(),this);
  if (helper.utils().getKeyguardStoredPasswordQuality() == DevicePolicyManager.PASSWORD_QUALITY_UNSPECIFIED) {
    showFinalConfirmation(StorageManager.CRYPT_TYPE_DEFAULT,"");
    return true;
  }
  return helper.launchConfirmationActivity(request,res.getText(R.string.master_clear_gesture_prompt),res.getText(R.string.crypt_keeper_confirm_encrypt),true);
}
