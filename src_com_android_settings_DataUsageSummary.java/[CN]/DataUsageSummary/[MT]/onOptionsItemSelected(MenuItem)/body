{
switch (item.getItemId()) {
case R.id.action_split_4g:
{
      mSplit4G=!item.isChecked();
      item.setChecked(mSplit4G);
      updateTabs();
      return true;
    }
case R.id.action_show_wifi:
{
    mShowWifi=!item.isChecked();
    item.setChecked(mShowWifi);
    updateTabs();
    return true;
  }
}
return false;
}
