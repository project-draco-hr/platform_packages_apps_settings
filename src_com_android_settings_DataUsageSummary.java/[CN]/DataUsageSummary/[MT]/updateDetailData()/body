{
  if (LOGD)   Log.d(TAG,"updateDetailData()");
  final long start=mChart.getInspectStart();
  final long end=mChart.getInspectEnd();
  if (isAppDetailMode()) {
    if (mDetailHistory != null) {
      final Context context=mChart.getContext();
      final long now=System.currentTimeMillis();
      final NetworkStatsHistory.Entry entry=mDetailHistory.getValues(start,end,now,null);
      final long total=entry.rxBytes + entry.txBytes;
      mAppSubtitle.setText(Formatter.formatFileSize(context,total));
    }
    getLoaderManager().destroyLoader(LOADER_SUMMARY);
  }
 else {
    getLoaderManager().restartLoader(LOADER_SUMMARY,SummaryForAllUidLoader.buildArgs(mTemplate,start,end),mSummaryForAllUid);
  }
}
