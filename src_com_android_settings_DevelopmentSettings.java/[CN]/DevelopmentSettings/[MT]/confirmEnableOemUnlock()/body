{
  DialogInterface.OnClickListener onConfirmListener=new DialogInterface.OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      Utils.setOemUnlockEnabled(getActivity(),true);
      updateAllOptions();
    }
  }
;
  new AlertDialog.Builder(getActivity()).setTitle(R.string.confirm_enable_oem_unlock_title).setMessage(R.string.confirm_enable_oem_unlock_text).setPositiveButton(R.string.enable_text,onConfirmListener).setNegativeButton(android.R.string.cancel,null).create().show();
}
