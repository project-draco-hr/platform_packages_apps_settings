{
  final Resources res=mFontSizePref.getContext().getResources();
  final String[] entries=res.getStringArray(R.array.entries_font_size);
  final String[] strEntryValues=res.getStringArray(R.array.entryvalues_font_size);
  final int index=ToggleFontSizePreferenceFragment.fontSizeValueToIndex(res.getConfiguration().fontScale,strEntryValues);
  mFontSizePref.setSummary(entries[index]);
}
