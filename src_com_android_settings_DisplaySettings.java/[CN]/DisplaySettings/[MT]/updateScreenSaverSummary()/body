{
  boolean activatedOnSleep=DreamSettings.isScreenSaverActivatedOnSleep(getActivity());
  boolean activatedOnDock=DreamSettings.isScreenSaverActivatedOnDock(getActivity());
  mScreenSaverPreference.setSummary(activatedOnSleep && activatedOnDock ? R.string.screensaver_settings_summary_both : activatedOnSleep ? R.string.screensaver_settings_summary_sleep : activatedOnDock ? R.string.screensaver_settings_summary_dock : R.string.screensaver_settings_summary_off);
}
