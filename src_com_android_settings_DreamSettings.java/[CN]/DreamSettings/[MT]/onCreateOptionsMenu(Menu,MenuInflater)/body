{
  logd("onCreateOptionsMenu()");
  boolean isEnabled=mBackend.isEnabled();
  MenuItem start=createMenuItem(menu,R.string.screensaver_settings_dream_start,MenuItem.SHOW_AS_ACTION_ALWAYS,isEnabled,new Runnable(){
    @Override public void run(){
      mBackend.startDreaming();
    }
  }
);
  MenuItem whenToDream=createMenuItem(menu,R.string.screensaver_settings_when_to_dream,MenuItem.SHOW_AS_ACTION_IF_ROOM,isEnabled,new Runnable(){
    @Override public void run(){
      showDialog(DIALOG_WHEN_TO_DREAM);
    }
  }
);
  super.onCreateOptionsMenu(menu,inflater);
  mMenuItemsWhenEnabled=new MenuItem[]{start,whenToDream};
}
