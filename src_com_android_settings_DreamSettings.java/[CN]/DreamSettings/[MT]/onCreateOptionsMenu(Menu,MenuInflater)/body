{
  logd("onCreateOptionsMenu()");
  super.onCreateOptionsMenu(menu,inflater);
  boolean isEnabled=mBackend.isEnabled();
  mWhenToDream=createMenuItem(menu,R.string.screensaver_settings_when_to_dream,MenuItem.SHOW_AS_ACTION_ALWAYS,isEnabled,new Runnable(){
    @Override public void run(){
      showDialog(DIALOG_WHEN_TO_DREAM);
    }
  }
);
}
