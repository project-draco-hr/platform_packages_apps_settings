{
  mRefreshing=true;
  boolean dreamsEnabled=mBackend.isEnabled();
  if (mSwitch.isChecked() != dreamsEnabled)   mSwitch.setChecked(dreamsEnabled);
  mAdapter.clear();
  if (dreamsEnabled) {
    List<DreamInfo> dreamInfos=mBackend.getDreamInfos();
    mAdapter.addAll(dreamInfos);
  }
  if (mDependentMenuItems != null)   for (  MenuItem item : mDependentMenuItems)   item.setEnabled(dreamsEnabled);
  mRefreshing=false;
}
