{
  logd("refreshFromBackend()");
  mRefreshing=true;
  boolean dreamsEnabled=mBackend.isEnabled();
  if (mSwitchBar.isSwitchChecked() != dreamsEnabled)   mSwitchBar.setSwitchChecked(dreamsEnabled);
  mAdapter.clear();
  if (dreamsEnabled) {
    List<DreamInfo> dreamInfos=mBackend.getDreamInfos();
    mAdapter.addAll(dreamInfos);
  }
  if (mMenuItemsWhenEnabled != null)   for (  MenuItem menuItem : mMenuItemsWhenEnabled)   menuItem.setEnabled(dreamsEnabled);
  mRefreshing=false;
}
