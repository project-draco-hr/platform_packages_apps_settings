{
  final Intent intent=new Intent();
  intent.setClassName("com.android.settings","com.android.settings.ConfirmLockPattern");
  intent.putExtra(ConfirmLockPattern.HEADER_TEXT,getText(R.string.media_format_gesture_prompt));
  intent.putExtra(ConfirmLockPattern.FOOTER_TEXT,getText(R.string.media_format_gesture_explanation));
  startActivityForResult(intent,KEYGUARD_REQUEST);
}
