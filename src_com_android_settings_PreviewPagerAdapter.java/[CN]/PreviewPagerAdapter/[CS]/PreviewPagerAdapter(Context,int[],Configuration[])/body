{
  mPreviewFrames=new TouchBlockingFrameLayout[previewSampleResIds.length];
  final Configuration origConfig=context.getResources().getConfiguration();
  for (int i=0; i < previewSampleResIds.length; ++i) {
    mPreviewFrames[i]=(TouchBlockingFrameLayout)LayoutInflater.from(context).inflate(R.layout.preview_frame_container,null);
    mPreviewFrames[i].setContentDescription(context.getString(R.string.preview_page_indicator_content_description,i + 1,previewSampleResIds.length));
    for (    Configuration configuration : configurations) {
      final Context configContext=context.createConfigurationContext(configuration);
      configContext.setTheme(context.getThemeResId());
      final LayoutInflater configInflater=LayoutInflater.from(configContext);
      final View sampleView=configInflater.inflate(previewSampleResIds[i],mPreviewFrames[i],false);
      sampleView.setAlpha(0);
      sampleView.setVisibility(View.INVISIBLE);
      mPreviewFrames[i].addView(sampleView);
    }
  }
  context.createConfigurationContext(origConfig);
}
