{
  if (mBackupManager != null) {
    try {
      mBackupManager.setBackupEnabled(enable);
    }
 catch (    RemoteException e) {
      mBackup.setChecked(!enable);
      mAutoRestore.setEnabled(!enable);
      return;
    }
  }
  mBackup.setChecked(enable);
  mAutoRestore.setEnabled(enable);
  mConfigure.setEnabled(enable);
}
