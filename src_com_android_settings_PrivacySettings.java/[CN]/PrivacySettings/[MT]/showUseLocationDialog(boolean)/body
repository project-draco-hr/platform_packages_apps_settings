{
  mOkClicked=false;
  if (force) {
    mUseLocation.setChecked(true);
  }
  if (hasAgreedToUseLocation()) {
    updateUseLocation();
    return;
  }
  mDialogType=DIALOG_USE_LOCATION;
  CharSequence msg=getResources().getText(R.string.use_location_warning_message);
  mConfirmDialog=new AlertDialog.Builder(this).setMessage(msg).setTitle(R.string.use_location_title).setIcon(android.R.drawable.ic_dialog_alert).setPositiveButton(R.string.agree,this).setNegativeButton(R.string.disagree,this).show();
  ((TextView)mConfirmDialog.findViewById(android.R.id.message)).setMovementMethod(LinkMovementMethod.getInstance());
  mConfirmDialog.setOnDismissListener(this);
}
