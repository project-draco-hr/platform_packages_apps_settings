{
  for (int i=0; i < SEEKBAR_ID.length; i++) {
    if (mSeekBarVolumizer[i] != null) {
      Dialog dialog=getDialog();
      if (dialog != null && dialog.isShowing()) {
        mSeekBarVolumizer[i].revertVolume();
      }
      mSeekBarVolumizer[i].stop();
      mSeekBarVolumizer[i]=null;
    }
  }
}
