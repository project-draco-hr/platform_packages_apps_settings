{
  mUtils=utils;
  mUserId=userId;
  mHasChallenge=hasChallenge;
  mChallenge=challenge;
  mUtils.setSeparateProfileChallengeEnabled(mUserId,true);
  mWasSecureBefore=mUtils.isSecure(mUserId);
