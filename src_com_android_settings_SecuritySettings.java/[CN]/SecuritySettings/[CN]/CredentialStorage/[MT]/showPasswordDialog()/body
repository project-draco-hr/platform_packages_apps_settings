{
  View view=View.inflate(SecuritySettings.this.getActivity(),R.layout.credentials_password_dialog,null);
  if (mState == KeyStore.UNINITIALIZED) {
    view.findViewById(R.id.hint).setVisibility(View.VISIBLE);
  }
 else {
    view.findViewById(R.id.old_password_prompt).setVisibility(View.VISIBLE);
    view.findViewById(R.id.old_password).setVisibility(View.VISIBLE);
  }
  Dialog dialog=new AlertDialog.Builder(SecuritySettings.this.getActivity()).setView(view).setTitle(R.string.credentials_set_password).setPositiveButton(android.R.string.ok,this).setNegativeButton(android.R.string.cancel,this).create();
  dialog.setOnDismissListener(this);
  mShowingDialog=DLG_PASSWORD;
  dialog.show();
}
