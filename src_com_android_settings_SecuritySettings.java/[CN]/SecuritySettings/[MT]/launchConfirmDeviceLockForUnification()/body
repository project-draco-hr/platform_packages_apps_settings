{
  final String title=getActivity().getString(R.string.lock_settings_profile_screen_lock_title);
  final ChooseLockSettingsHelper helper=new ChooseLockSettingsHelper(getActivity(),this);
  if (!helper.launchConfirmationActivity(UNIFY_LOCK_CONFIRM_DEVICE_REQUEST,title,true,UserHandle.myUserId())) {
    launchConfirmProfileLockForUnification();
  }
}
