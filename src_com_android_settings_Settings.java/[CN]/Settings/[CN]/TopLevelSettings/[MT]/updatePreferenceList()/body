{
  final Activity activity=getActivity();
  PreferenceGroup parent=(PreferenceGroup)findPreference(KEY_PARENT);
  Utils.updatePreferenceToSpecificActivityOrRemove(activity,parent,KEY_SYNC_SETTINGS,0);
  Preference dockSettings=parent.findPreference(KEY_DOCK_SETTINGS);
  if (activity.getResources().getBoolean(R.bool.has_dock_settings) == false && dockSettings != null) {
    parent.removePreference(dockSettings);
  }
  Utils.updatePreferenceToSpecificActivityFromMetaDataOrRemove(activity,parent,KEY_OPERATOR_SETTINGS);
  Utils.updatePreferenceToSpecificActivityFromMetaDataOrRemove(activity,parent,KEY_MANUFACTURER_SETTINGS);
  Preference callSettings=parent.findPreference(KEY_CALL_SETTINGS);
  if (!Utils.isVoiceCapable(activity) && callSettings != null) {
    parent.removePreference(callSettings);
  }
}
