{
  Intent intent=super.onBuildStartFragmentIntent(fragmentName,args,titleRes,shortTitleRes);
  if (WifiSettings.class.getName().equals(fragmentName) || WifiP2pSettings.class.getName().equals(fragmentName) || WifiDisplaySettings.class.getName().equals(fragmentName)|| BluetoothSettings.class.getName().equals(fragmentName)|| DreamSettings.class.getName().equals(fragmentName)|| ToggleAccessibilityServicePreferenceFragment.class.getName().equals(fragmentName)) {
    intent.putExtra(EXTRA_UI_OPTIONS,ActivityInfo.UIOPTION_SPLIT_ACTION_BAR_WHEN_NARROW);
  }
  intent.setClass(this,SubSettings.class);
  return intent;
}
