{
  if (header == null) {
    mCurrentHeader=null;
    return;
  }
  if (header.id == R.id.account_add) {
    mDrawer.clearChoices();
    return;
  }
  mCurrentHeader=header;
  int index=mHeaders.indexOf(header);
  if (mDrawer != null) {
    if (index >= 0) {
      mDrawer.setItemChecked(index,true);
    }
 else {
      mDrawer.clearChoices();
    }
  }
}
