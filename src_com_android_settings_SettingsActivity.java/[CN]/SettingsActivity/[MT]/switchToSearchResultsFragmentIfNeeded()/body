{
  if (mSearchResultsFragment != null) {
    return;
  }
  Fragment current=getFragmentManager().findFragmentById(R.id.prefs);
  if (current != null && current instanceof SearchResultsSummary) {
    mSearchResultsFragment=(SearchResultsSummary)current;
  }
 else {
    String title=getString(R.string.search_results_title);
    mSearchResultsFragment=(SearchResultsSummary)switchToFragment(SearchResultsSummary.class.getName(),null,false,true,title,true);
  }
  mSearchMenuItemExpanded=true;
}
