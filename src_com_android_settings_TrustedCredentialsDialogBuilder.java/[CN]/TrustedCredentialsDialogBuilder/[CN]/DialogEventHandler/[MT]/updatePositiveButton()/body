{
  final CertHolder certHolder=getCurrentCertInfo();
  mNeedsApproval=!certHolder.isSystemCert() && !mDpm.isCaCertApproved(certHolder.getAlias(),certHolder.getUserId());
  CharSequence displayText=mActivity.getText(mNeedsApproval ? R.string.trusted_credentials_trust_label : android.R.string.ok);
  mPositiveButton=updateButton(DialogInterface.BUTTON_POSITIVE,displayText);
}
