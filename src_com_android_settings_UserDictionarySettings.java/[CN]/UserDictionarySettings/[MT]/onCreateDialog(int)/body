{
  View content=getLayoutInflater().inflate(R.layout.dialog_edittext,null);
  final EditText editText=(EditText)content.findViewById(R.id.edittext);
  return new AlertDialog.Builder(this).setTitle(R.string.user_dict_settings_add_dialog_title).setView(content).setPositiveButton(android.R.string.ok,new DialogInterface.OnClickListener(){
    public void onClick(    DialogInterface dialog,    int which){
      onAddOrEditFinished(editText.getText().toString());
    }
  }
).setNegativeButton(android.R.string.cancel,null).create();
}
