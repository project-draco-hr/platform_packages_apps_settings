{
  if (preference == mVoiceInteractionPref) {
    String setting=(String)newValue;
    Settings.Secure.putString(mFragment.getContentResolver(),Settings.Secure.VOICE_INTERACTION_SERVICE,setting);
    updateVoiceInteractionSettingsLink(setting);
  }
 else   if (preference == mRecognizerPref) {
    String setting=(String)newValue;
    Settings.Secure.putString(mFragment.getContentResolver(),Settings.Secure.VOICE_RECOGNITION_SERVICE,setting);
    updateRecognizerSettingsLink(setting);
  }
  return true;
}
