{
  String zoneNameString;
  if (preferLongName) {
    zoneNameString=DateTimeSettings.getZoneLongName(locale,tz,now);
  }
 else {
    zoneNameString=getZoneExemplarLocation(locale,tz);
    if (zoneNameString == null || zoneNameString.isEmpty()) {
      zoneNameString=DateTimeSettings.getZoneLongName(locale,tz,now);
    }
  }
  return zoneNameString;
}
