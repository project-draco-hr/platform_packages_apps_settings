{
  final boolean enabled=Settings.Secure.getInt(getContentResolver(),Settings.Secure.ACCESSIBILITY_ENABLED,0) == 1;
  final String enabledText=(enabled ? getString(R.string.accessibility_feature_state_on) : getString(R.string.accessibility_feature_state_off));
  mTalkbackPreference.setSummary(getString(R.string.talkback_summary,enabledText));
}
