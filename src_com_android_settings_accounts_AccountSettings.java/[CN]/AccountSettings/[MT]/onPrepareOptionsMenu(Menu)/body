{
  final UserHandle currentProfile=UserHandle.getCallingUserHandle();
  if (mIsSingleProfileUi) {
    menu.findItem(R.id.account_settings_menu_auto_sync).setChecked(ContentResolver.getMasterSyncAutomaticallyAsUser(currentProfile.getIdentifier()));
  }
 else {
    final UserHandle managedProfile=Utils.getManagedProfile(mUm);
    menu.findItem(R.id.account_settings_menu_auto_sync_personal).setChecked(ContentResolver.getMasterSyncAutomaticallyAsUser(currentProfile.getIdentifier()));
    menu.findItem(R.id.account_settings_menu_auto_sync_work).setChecked(ContentResolver.getMasterSyncAutomaticallyAsUser(managedProfile.getIdentifier()));
  }
}
