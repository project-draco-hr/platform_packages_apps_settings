{
  MenuItem addAccountItem=menu.add(0,MENU_ADD_ACCOUNT,0,R.string.add_account_label);
  addAccountItem.setShowAsAction(MenuItem.SHOW_AS_ACTION_IF_ROOM | MenuItem.SHOW_AS_ACTION_WITH_TEXT);
  mSyncAppMenuItem=menu.add(0,MENU_SYNC_APP,0,R.string.sync_automatically).setCheckable(true).setChecked(ContentResolver.getMasterSyncAutomatically());
  mSyncAppMenuItem.setShowAsAction(MenuItem.SHOW_AS_ACTION_NEVER);
}
