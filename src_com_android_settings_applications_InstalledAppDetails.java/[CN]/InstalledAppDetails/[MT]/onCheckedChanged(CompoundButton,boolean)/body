{
  String packageName=mAppEntry.info.packageName;
  ActivityManager am=(ActivityManager)getActivity().getSystemService(Context.ACTIVITY_SERVICE);
  if (buttonView == mAskCompatibilityCB) {
    am.setPackageAskScreenCompat(packageName,isChecked);
  }
 else   if (buttonView == mEnableCompatibilityCB) {
    am.setPackageScreenCompatMode(packageName,isChecked ? ActivityManager.COMPAT_MODE_ENABLED : ActivityManager.COMPAT_MODE_DISABLED);
  }
 else   if (buttonView == mNotificationSwitch) {
    INotificationManager nm=INotificationManager.Stub.asInterface(ServiceManager.getService(Context.NOTIFICATION_SERVICE));
    try {
      nm.setNotificationsEnabledForPackage(packageName,isChecked);
    }
 catch (    android.os.RemoteException ex) {
      mNotificationSwitch.setChecked(!isChecked);
    }
  }
}
