{
  boolean canBe=false;
  if ((info.flags & ApplicationInfo.FLAG_EXTERNAL_STORAGE) != 0) {
    canBe=true;
  }
 else {
    if ((info.flags & ApplicationInfo.FLAG_SYSTEM) == 0) {
      if (info.installLocation == PackageInfo.INSTALL_LOCATION_PREFER_EXTERNAL || info.installLocation == PackageInfo.INSTALL_LOCATION_AUTO) {
        canBe=true;
      }
 else       if (info.installLocation == PackageInfo.INSTALL_LOCATION_UNSPECIFIED) {
        if (mInstallLocation == PackageHelper.APP_INSTALL_EXTERNAL) {
          canBe=true;
        }
      }
    }
  }
  return canBe;
}
