{
  addDetailsItem(mDetailsParent,getResources().getText(R.string.process_stats_avg_ram_use),Formatter.formatShortFileSize(getActivity(),(mUseUss ? mEntry.mAvgUss : mEntry.mAvgPss) * 1024));
  addDetailsItem(mDetailsParent,getResources().getText(R.string.process_stats_max_ram_use),Formatter.formatShortFileSize(getActivity(),(mUseUss ? mEntry.mMaxUss : mEntry.mMaxPss) * 1024));
  addDetailsItem(mDetailsParent,getResources().getText(R.string.process_stats_run_time),makePercentString(getResources(),mEntry.mDuration,mTotalTime));
}
