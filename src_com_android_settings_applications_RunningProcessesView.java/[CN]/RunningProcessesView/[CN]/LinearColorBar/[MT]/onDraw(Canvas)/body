{
  super.onDraw(canvas);
  int width=getWidth();
  mRect.top=0;
  mRect.bottom=getHeight();
  int left=0;
  int right=left + (int)(width * mRedRatio);
  if (left < right) {
    mRect.left=left;
    mRect.right=right;
    mPaint.setColor(0xffff8080);
    canvas.drawRect(mRect,mPaint);
    width-=(right - left);
    left=right;
  }
  right=left + (int)(width * mYellowRatio);
  if (left < right) {
    mRect.left=left;
    mRect.right=right;
    mPaint.setColor(0xffffff00);
    canvas.drawRect(mRect,mPaint);
    width-=(right - left);
    left=right;
  }
  right=left + width;
  if (left < right) {
    mRect.left=left;
    mRect.right=right;
    mPaint.setColor(0xff80ff80);
    canvas.drawRect(mRect,mPaint);
  }
}
