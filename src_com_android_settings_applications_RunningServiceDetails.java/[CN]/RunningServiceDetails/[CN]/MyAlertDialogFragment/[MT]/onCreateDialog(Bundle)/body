{
  int id=getArguments().getInt("id");
switch (id) {
case DIALOG_CONFIRM_STOP:
{
      final ComponentName comp=(ComponentName)getArguments().getParcelable("comp");
      if (getOwner().activeDetailForService(comp) == null) {
        return null;
      }
      return new AlertDialog.Builder(getActivity()).setTitle(getActivity().getString(R.string.runningservicedetails_stop_dlg_title)).setIconAttribute(android.R.attr.alertDialogIcon).setMessage(getActivity().getString(R.string.runningservicedetails_stop_dlg_text)).setPositiveButton(R.string.dlg_ok,new DialogInterface.OnClickListener(){
        public void onClick(        DialogInterface dialog,        int which){
          ActiveDetail ad=getOwner().activeDetailForService(comp);
          if (ad != null) {
            ad.stopActiveService(true);
          }
        }
      }
).setNegativeButton(R.string.dlg_cancel,null).create();
    }
}
throw new IllegalArgumentException("unknown id " + id);
}
