{
switch (state) {
case BluetoothAdapter.STATE_TURNING_ON:
    mSwitch.setEnabled(false);
  break;
case BluetoothAdapter.STATE_ON:
setChecked(true);
mSwitch.setEnabled(true);
break;
case BluetoothAdapter.STATE_TURNING_OFF:
mSwitch.setEnabled(false);
break;
case BluetoothAdapter.STATE_OFF:
setChecked(false);
mSwitch.setEnabled(true);
break;
default :
setChecked(false);
mSwitch.setEnabled(true);
}
}
