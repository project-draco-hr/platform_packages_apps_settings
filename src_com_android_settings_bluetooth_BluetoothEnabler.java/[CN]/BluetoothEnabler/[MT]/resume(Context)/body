{
  if (mLocalAdapter == null) {
    mSwitchBar.setSwitchEnabled(false);
    return;
  }
  if (mContext != context) {
    mContext=context;
  }
  handleStateChanged(mLocalAdapter.getBluetoothState());
  mContext.registerReceiver(mReceiver,mIntentFilter);
  mSwitchBar.addOnSwitchChangeListener(this);
  mSwitchBar.show();
  mValidListener=true;
}
