{
  mAlertDialog=new AlertDialog.Builder(getActivity()).setIcon(android.R.drawable.ic_dialog_info).setTitle(R.string.bluetooth_rename_device).setView(createDialogView()).setPositiveButton(R.string.bluetooth_rename_button,new DialogInterface.OnClickListener(){
    public void onClick(    DialogInterface dialog,    int which){
      if (mLocalAdapter != null) {
        String deviceName=mDeviceNameView.getText().toString();
        Log.d(TAG,"Setting device name to " + deviceName);
        mLocalAdapter.setName(deviceName);
      }
    }
  }
).setNegativeButton(android.R.string.cancel,null).create();
  return mAlertDialog;
}
