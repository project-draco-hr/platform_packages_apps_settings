{
  addPreferencesFromResource(R.xml.bluetooth_settings);
  mEnabler=new BluetoothEnabler(getActivity(),(CheckBoxPreference)findPreference(KEY_BT_CHECKBOX));
  mDiscoverableEnabler=new BluetoothDiscoverableEnabler(getActivity(),mLocalAdapter,(CheckBoxPreference)findPreference(KEY_BT_DISCOVERABLE),(ListPreference)findPreference(KEY_BT_DISCOVERABLE_TIMEOUT));
  mNamePreference=(BluetoothNamePreference)findPreference(KEY_BT_NAME);
}
