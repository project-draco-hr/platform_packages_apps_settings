{
  for (  Profile profile : mProfiles) {
    LocalBluetoothProfileManager profileManager=LocalBluetoothProfileManager.getProfileManager(mLocalManager,profile);
    int connectionStatus=profileManager.getConnectionStatus(mDevice);
    if (SettingsBtStatus.isConnectionStatusConnected(connectionStatus) || connectionStatus == SettingsBtStatus.CONNECTION_STATUS_CONNECTING || connectionStatus == SettingsBtStatus.CONNECTION_STATUS_DISCONNECTING) {
      return SettingsBtStatus.getConnectionStatusSummary(connectionStatus);
    }
  }
  return SettingsBtStatus.getPairingStatusSummary(getBondState());
}
