{
  for (  Profile profile : mProfiles) {
    int status=LocalBluetoothProfileManager.getProfileManager(mLocalManager,profile).getConnectionStatus(mDevice);
    if (SettingsBtStatus.isConnectionStatusBusy(status)) {
      return true;
    }
  }
  if (getBondState() == BluetoothDevice.BOND_BONDING) {
    return true;
  }
  return false;
}
