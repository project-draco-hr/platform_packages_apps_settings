{
  if (D) {
    Log.d(TAG,"onProfileStateChanged: profile " + profile.toString() + " newProfileState "+ newProfileState);
  }
  final LocalBluetoothProfileManager pm=LocalBluetoothProfileManager.getProfileManager(mLocalManager,profile);
  if (pm == null)   return;
  int newState=pm.convertState(newProfileState);
  if (newState == SettingsBtStatus.CONNECTION_STATUS_CONNECTED) {
    if (!mProfiles.contains(profile)) {
      mProfiles.add(profile);
    }
  }
}
