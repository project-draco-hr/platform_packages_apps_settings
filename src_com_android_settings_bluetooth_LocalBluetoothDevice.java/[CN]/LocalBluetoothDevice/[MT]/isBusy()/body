{
  for (  Profile profile : mProfiles) {
    int status=LocalBluetoothProfileManager.getProfileManager(mLocalManager,profile).getConnectionStatus(mAddress);
    if (SettingsBtStatus.isConnectionStatusBusy(status)) {
      return true;
    }
  }
  if (getPairingStatus() == SettingsBtStatus.PAIRING_STATUS_PAIRING) {
    return true;
  }
  return false;
}
