{
  boolean wasSetStateSuccessful=enabled ? mManager.enable() : mManager.disable();
  if (wasSetStateSuccessful) {
    setBluetoothStateInt(enabled ? BluetoothDevice.BLUETOOTH_STATE_TURNING_ON : BluetoothDevice.BLUETOOTH_STATE_TURNING_OFF);
  }
 else {
    if (V) {
      Log.v(TAG,"setBluetoothEnabled call, manager didn't return success for enabled: " + enabled);
    }
    syncBluetoothState();
  }
}
