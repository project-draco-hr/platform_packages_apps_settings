{
  boolean wasSetStateSuccessful=enabled ? mAdapter.enable() : mAdapter.disable();
  if (wasSetStateSuccessful) {
    setBluetoothStateInt(enabled ? BluetoothAdapter.BLUETOOTH_STATE_TURNING_ON : BluetoothAdapter.BLUETOOTH_STATE_TURNING_OFF);
  }
 else {
    if (V) {
      Log.v(TAG,"setBluetoothEnabled call, manager didn't return success for enabled: " + enabled);
    }
    syncBluetoothState();
  }
}
