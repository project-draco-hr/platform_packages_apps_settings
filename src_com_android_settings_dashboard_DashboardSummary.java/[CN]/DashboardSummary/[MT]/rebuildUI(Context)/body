{
  if (!isAdded()) {
    Log.w(TAG,"Cannot build the DashboardSummary UI yet as the Fragment is not added");
    return;
  }
  long start=System.currentTimeMillis();
  mAdapter=new DashboardAdapter(getContext(),((SettingsActivity)getActivity()).getDashboardCategories(true));
  mDashboard.setAdapter(mAdapter);
  long delta=System.currentTimeMillis() - start;
  Log.d(TAG,"rebuildUI took: " + delta + " ms");
}
