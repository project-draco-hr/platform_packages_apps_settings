{
  if (mListening == listening)   return;
  if (DEBUG)   Log.d(TAG,"Listening " + listening);
  mListening=listening;
  for (  SummaryProvider p : mSummaryMap.keySet()) {
    try {
      p.setListening(listening);
    }
 catch (    Exception e) {
      Log.d(TAG,"Problem in setListening",e);
    }
  }
}
