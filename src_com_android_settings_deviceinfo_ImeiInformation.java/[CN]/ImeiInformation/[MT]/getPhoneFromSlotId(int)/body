{
  final SubscriptionInfo subInfo=mSubscriptionManager.getActiveSubscriptionInfoForSimSlotIndex(slotIdx);
  if (subInfo == null) {
    return null;
  }
  final Phone[] phones=PhoneFactory.getPhones();
  for (int i=0; i < phones.length; i++) {
    if (phones[i].getSubId() == subInfo.getSubscriptionId()) {
      return phones[i];
    }
  }
  return null;
}
