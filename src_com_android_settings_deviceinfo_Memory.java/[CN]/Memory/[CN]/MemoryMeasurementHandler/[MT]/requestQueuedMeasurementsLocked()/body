{
  final Activity activity=getActivity();
  if (activity == null) {
    return;
  }
  final PackageManager pm=activity.getPackageManager();
  if (pm == null) {
    return;
  }
  final int N=mPendingApps.size();
  for (int i=0; i < N; i++) {
    pm.getPackageSizeInfo(mPendingApps.get(i),mStatsObserver);
  }
}
