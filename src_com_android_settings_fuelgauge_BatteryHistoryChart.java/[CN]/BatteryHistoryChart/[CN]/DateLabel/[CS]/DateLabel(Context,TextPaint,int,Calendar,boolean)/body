{
  this.x=x;
  if (dayFirst) {
    label=context.getString(R.string.battery_stats_date_day_first_label,cal.get(Calendar.DAY_OF_MONTH),cal.get(Calendar.MONTH));
  }
 else {
    label=context.getString(R.string.battery_stats_date_month_first_label,cal.get(Calendar.DAY_OF_MONTH),cal.get(Calendar.MONTH));
  }
  width=(int)paint.measureText(label);
}
