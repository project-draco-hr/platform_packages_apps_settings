mTextPaint.setTextSize(textSize);
Typeface tf=null;
switch (typefaceIndex) {
case SANS:
tf=Typeface.SANS_SERIF;
break;
case SERIF:
tf=Typeface.SERIF;
break;
case MONOSPACE:
tf=Typeface.MONOSPACE;
break;
}
setTypeface(tf,styleIndex);
if (shadowcolor != 0) {
