{
  if (DEBUG) {
    menu.add(0,MENU_STATS_TYPE,0,R.string.menu_stats_total).setIcon(com.android.internal.R.drawable.ic_menu_info_details).setAlphabeticShortcut('t');
  }
  MenuItem refresh=menu.add(0,MENU_STATS_REFRESH,0,R.string.menu_stats_refresh).setIcon(R.drawable.ic_menu_refresh_holo_dark).setAlphabeticShortcut('r');
  refresh.setShowAsAction(MenuItem.SHOW_AS_ACTION_IF_ROOM | MenuItem.SHOW_AS_ACTION_WITH_TEXT);
  String helpUrl;
  if (!TextUtils.isEmpty(helpUrl=getResources().getString(R.string.help_url_battery))) {
    final MenuItem help=menu.add(0,MENU_HELP,0,R.string.help_label);
    HelpUtils.prepareHelpMenuItem(getActivity(),help,helpUrl);
  }
}
