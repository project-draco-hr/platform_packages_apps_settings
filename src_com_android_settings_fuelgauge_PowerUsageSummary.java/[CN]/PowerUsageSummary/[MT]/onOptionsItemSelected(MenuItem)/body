{
switch (item.getItemId()) {
case MENU_STATS_TYPE:
    if (mStatsType == BatteryStats.STATS_TOTAL) {
      mStatsType=BatteryStats.STATS_UNPLUGGED;
    }
 else {
      mStatsType=BatteryStats.STATS_TOTAL;
    }
  updateAppsList();
return true;
case MENU_STATS_REFRESH:
mStats=null;
updateAppsList();
return true;
default :
return false;
}
}
