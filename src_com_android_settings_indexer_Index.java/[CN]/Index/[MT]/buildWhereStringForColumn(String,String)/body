{
  final StringBuilder sb=new StringBuilder(columnName);
  sb.append(" MATCH ");
  DatabaseUtils.appendEscapedSQLString(sb,query + "*");
  sb.append(" AND ");
  sb.append(IndexColumns.LOCALE);
  sb.append(" = ");
  DatabaseUtils.appendEscapedSQLString(sb,Locale.getDefault().toString());
  return sb.toString();
}
