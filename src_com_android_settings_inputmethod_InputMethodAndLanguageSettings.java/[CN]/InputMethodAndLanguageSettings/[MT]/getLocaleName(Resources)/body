{
  Configuration conf=resources.getConfiguration();
  String language=conf.locale.getLanguage();
  String localeName;
  if (hasOnlyOneLanguageInstance(language,Resources.getSystem().getAssets().getLocales())) {
    localeName=conf.locale.getDisplayLanguage(conf.locale);
  }
 else {
    localeName=conf.locale.getDisplayName(conf.locale);
  }
  if (localeName.length() > 1) {
    localeName=Character.toUpperCase(localeName.charAt(0)) + localeName.substring(1);
  }
  return localeName;
}
