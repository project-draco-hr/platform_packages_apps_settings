{
  super.onResume();
  ContentResolver resolver=getContentResolver();
  if (mHaveHardKeyboard) {
    for (int i=0; i < sHardKeyboardKeys.length; ++i) {
      CheckBoxPreference chkPref=(CheckBoxPreference)mHardKeyboardCategory.findPreference(sHardKeyboardKeys[i]);
      chkPref.setChecked(System.getInt(resolver,sSystemSettingNames[i],1) > 0);
    }
  }
  InputMethodAndSubtypeUtil.loadInputMethodSubtypeList(this,resolver,mInputMethodProperties,mInputMethodPrefsMap);
  updateActiveInputMethodsSummary();
}
