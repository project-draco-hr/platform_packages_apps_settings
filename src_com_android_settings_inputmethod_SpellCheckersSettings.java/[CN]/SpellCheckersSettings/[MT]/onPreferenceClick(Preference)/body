{
  for (  SingleSpellCheckerPreference scp : mSpellCheckers) {
    if (arg0.equals(scp)) {
      mTsm.setCurrentSpellChecker(scp.getSpellCheckerInfo());
    }
  }
  if (DBG) {
    Log.d(TAG,"Current spell check is " + SpellCheckerUtils.getCurrentSpellChecker(mTsm).getId());
  }
  updateScreen();
  return true;
}
