{
  for (  final int idToHide : IDS_SHOWN_ONLY_IN_MORE_OPTIONS_MODE) {
    final View viewToHide=findViewById(idToHide);
    viewToHide.setVisibility(View.GONE);
  }
  findViewById(R.id.user_dictionary_settings_add_dialog_more_options).setVisibility(View.VISIBLE);
  findViewById(R.id.user_dictionary_settings_add_dialog_less_options).setVisibility(View.GONE);
  mIsShowingMoreOptions=false;
}
