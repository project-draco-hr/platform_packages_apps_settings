{
  super(context);
  mTemplate=template;
  setPersistent(false);
  mBinding=true;
  final NetworkPolicy policy=mPolicyEditor.getPolicy(template);
  if (policy != null) {
    if (policy.limitBytes != LIMIT_DISABLED) {
      setChecked(true);
      setEnabled(false);
    }
 else {
      setChecked(policy.metered);
    }
  }
 else {
    setChecked(false);
  }
  mBinding=false;
}
