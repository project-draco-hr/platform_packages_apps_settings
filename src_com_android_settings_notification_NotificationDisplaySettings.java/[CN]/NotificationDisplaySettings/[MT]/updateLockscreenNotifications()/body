{
  if (mLockscreen == null)   return;
  final boolean allowPrivate=getLockscreenAllowPrivateNotifications();
  final boolean enabled=getLockscreenNotificationsEnabled();
  final int val=!enabled ? R.string.lock_screen_notifications_summary_disable : allowPrivate ? R.string.lock_screen_notifications_summary_show : R.string.lock_screen_notifications_summary_hide;
  mLockscreen.setSelectedValue(val);
}
