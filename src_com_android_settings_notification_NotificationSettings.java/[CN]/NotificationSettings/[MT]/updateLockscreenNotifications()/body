{
  if (mLockscreen == null) {
    return;
  }
  final boolean allowPrivate=getLockscreenAllowPrivateNotifications();
  final boolean enabled=getLockscreenNotificationsEnabled();
  final int selectedVal=!enabled ? R.string.lock_screen_notifications_summary_disable : allowPrivate ? R.string.lock_screen_notifications_summary_show : R.string.lock_screen_notifications_summary_hide;
  mLockscreen.setSelectedValue(selectedVal);
}
