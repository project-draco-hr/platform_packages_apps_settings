{
  super.onResume();
  checkNotificationFeaturesAndSetDisabled(mShowAllButton,KEYGUARD_DISABLE_SECURE_NOTIFICATIONS | KEYGUARD_DISABLE_UNREDACTED_NOTIFICATIONS);
  checkNotificationFeaturesAndSetDisabled(mRedactSensitiveButton,KEYGUARD_DISABLE_SECURE_NOTIFICATIONS);
  mRemoteInputCheckbox.setDisabledByAdmin(RestrictedLockUtils.checkIfKeyguardFeaturesDisabled(getActivity(),DevicePolicyManager.KEYGUARD_DISABLE_REMOTE_INPUT,mUserId));
  loadFromSettings();
}
