{
  final String mode=computeZenModeCaption(getResources(),rule.zenMode);
  final String ruleState=(rule == null || !rule.enabled) ? getString(R.string.switch_off_text) : getString(R.string.zen_mode_rule_summary_enabled_combination,mode);
  return isSystemRule ? ruleState : getString(R.string.zen_mode_rule_summary_provider_combination,providerLabel,ruleState);
}
