{
  final Resources res=getResources();
  if (mSubInfoRecord != null) {
    setTitle(String.format(res.getString(R.string.sim_editor_title),(mSubInfoRecord.getSimSlotIndex() + 1)));
    setSummary(mSubInfoRecord.getDisplayName() + " - " + mSubInfoRecord.getNumber().toString());
    setEnabled(true);
  }
 else {
    setSummary(R.string.sim_slot_empty);
    setFragment(null);
    setEnabled(false);
  }
}
