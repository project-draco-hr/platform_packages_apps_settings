{
  super.onResume();
  UserInfo info=Utils.getExistingUser(mUserManager,mUser);
  if (info == null) {
    finishFragment();
  }
 else {
    ((TextView)mHeaderView.findViewById(android.R.id.title)).setText(info.name);
    ((ImageView)mHeaderView.findViewById(android.R.id.icon)).setImageDrawable(getCircularUserIcon());
  }
}
