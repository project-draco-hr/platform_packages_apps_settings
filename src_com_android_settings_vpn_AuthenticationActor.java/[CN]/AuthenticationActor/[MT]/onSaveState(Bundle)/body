{
  outState.putBoolean(STATE_IS_DIALOG_OPEN,(mConnectDialog != null));
  if (mConnectDialog != null) {
    assert(mConnectDialog.isShowing());
    outState.putBoolean(STATE_IS_DIALOG_OPEN,(mConnectDialog != null));
    outState.putString(STATE_USERNAME,mUsernameView.getText().toString());
    outState.putString(STATE_PASSWORD,mPasswordView.getText().toString());
    dismissConnectDialog();
  }
}
