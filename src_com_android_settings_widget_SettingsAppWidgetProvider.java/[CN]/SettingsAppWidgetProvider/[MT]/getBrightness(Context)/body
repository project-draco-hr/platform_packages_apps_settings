{
  try {
    IHardwareService hardware=IHardwareService.Stub.asInterface(ServiceManager.getService("hardware"));
    if (hardware != null) {
      int brightness=Settings.System.getInt(context.getContentResolver(),Settings.System.SCREEN_BRIGHTNESS);
      return brightness > 100;
    }
  }
 catch (  Exception e) {
    Log.d(TAG,"getBrightness: " + e);
  }
  return false;
}
