{
  if (mBackground != null) {
    canvas.save();
    canvas.translate(0,mForegroundBounds.height());
    canvas.scale(mScale,mScale,0,0);
    mBackground.draw(canvas);
    canvas.restore();
  }
  if (mForeground != null) {
    canvas.save();
    mForeground.draw(canvas);
    canvas.restore();
  }
  super.onDraw(canvas);
}
