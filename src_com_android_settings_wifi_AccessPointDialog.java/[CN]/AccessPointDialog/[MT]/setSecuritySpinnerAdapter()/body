{
  Context context=getContext();
  int arrayResId=mAutoSecurityAllowed ? R.array.wifi_security_entries : R.array.wifi_security_without_auto_entries;
  ArrayAdapter<CharSequence> adapter=new ArrayAdapter<CharSequence>(context,android.R.layout.simple_spinner_item,context.getResources().getStringArray(arrayResId));
  adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
  mSecuritySpinner.setAdapter(adapter);
}
