{
  if (sb.length() == 0) {
    if (autoUpperCaseFirstLetter && string.length() > 1 && Character.isLowerCase(string.charAt(0)) && !Character.isUpperCase(string.charAt(1))) {
      sb.append(Character.toUpperCase(string.charAt(0))).append(string,1,string.length());
    }
 else {
      sb.append(string);
    }
  }
 else {
    sb.append(", ");
    sb.append(string);
  }
}
