{
  if (wifiInfo != null) {
    blockRefresh();
    setBssid(wifiInfo.getBSSID());
    setLinkSpeed(wifiInfo.getLinkSpeed());
    setNetworkId(wifiInfo.getNetworkId());
    setIpAddress(wifiInfo.getIpAddress());
    setSsid(wifiInfo.getSSID());
    if (state != null) {
      setStatus(state);
    }
    setHiddenSsid(wifiInfo.getHiddenSSID());
    unblockRefresh();
  }
}
