{
  if (parent == mSecuritySpinner) {
    mAccessPointSecurity=position;
    showSecurityFields();
    enableSubmitIfAppropriate();
  }
 else   if (parent == mNetworkSetupSpinner) {
    showNetworkSetupFields();
  }
 else   if (parent == mProxySettingsSpinner) {
    showProxyFields();
    enableSubmitIfAppropriate();
  }
 else {
    showIpConfigFields();
    enableSubmitIfAppropriate();
  }
}
