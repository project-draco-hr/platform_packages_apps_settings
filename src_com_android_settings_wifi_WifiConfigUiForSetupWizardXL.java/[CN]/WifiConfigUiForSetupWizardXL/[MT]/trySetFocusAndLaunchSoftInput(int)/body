{
  final View viewToBeFocused=mView.findViewById(id);
  if (viewToBeFocused != null && viewToBeFocused.getVisibility() == View.VISIBLE) {
    final boolean requestFocusResult=viewToBeFocused.requestFocus();
    Log.i(TAG,String.format("Focus request to %x %s.",id,(requestFocusResult ? "successful" : "failed")));
    if (requestFocusResult && viewToBeFocused instanceof EditText) {
      Log.i(TAG,String.format("Focused View (%x) is EditText. Try to show software keyboard",id));
      final InputMethodManager inputMethodManager=(InputMethodManager)mActivity.getSystemService(Context.INPUT_METHOD_SERVICE);
      final boolean showSoftInputResult=inputMethodManager.showSoftInput(viewToBeFocused,0);
      if (!showSoftInputResult) {
        Log.w(TAG,"Failed to show software keyboard ");
      }
    }
  }
}
