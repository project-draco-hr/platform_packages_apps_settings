{
  if (LOCAL_LOGD) {
    Log.d(TAG,"Received network state changed to " + networkInfo);
  }
  if (mWifiManager.isWifiEnabled()) {
    String summary=WifiStatus.getStatus(mContext,mWifiManager.getConnectionInfo().getSSID(),networkInfo.getDetailedState());
    mWifiCheckBoxPref.setSummary(summary);
  }
}
