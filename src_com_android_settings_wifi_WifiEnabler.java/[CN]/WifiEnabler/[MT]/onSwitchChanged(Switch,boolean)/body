{
  if (mStateMachineEvent) {
    return;
  }
  if (isChecked && !WirelessUtils.isRadioAllowed(mContext,Settings.Global.RADIO_WIFI)) {
    Toast.makeText(mContext,R.string.wifi_in_airplane_mode,Toast.LENGTH_SHORT).show();
    mSwitchBar.setChecked(false);
    return;
  }
  int wifiApState=mWifiManager.getWifiApState();
  if (isChecked && ((wifiApState == WifiManager.WIFI_AP_STATE_ENABLING) || (wifiApState == WifiManager.WIFI_AP_STATE_ENABLED))) {
    mWifiManager.setWifiApEnabled(null,false);
  }
  MetricsLogger.action(mContext,isChecked ? MetricsEvent.ACTION_WIFI_ON : MetricsEvent.ACTION_WIFI_OFF);
  if (!mWifiManager.setWifiEnabled(isChecked)) {
    mSwitchBar.setEnabled(true);
    Toast.makeText(mContext,R.string.wifi_error,Toast.LENGTH_SHORT).show();
  }
}
