{
  ContentObserver contentObserver=new ContentObserver(null){
    @Override public void onChange(    boolean selfChange){
      getPersistedNotifyScanMode();
    }
  }
;
  mContext.getContentResolver().registerContentObserver(Settings.Global.getUriFor(Settings.Global.WIFI_NOTIFY_SCAN_ALWAYS_AVAILABLE),false,contentObserver);
  getPersistedNotifyScanMode();
}
