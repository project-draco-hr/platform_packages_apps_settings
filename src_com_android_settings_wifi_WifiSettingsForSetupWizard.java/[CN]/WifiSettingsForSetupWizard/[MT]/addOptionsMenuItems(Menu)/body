{
  final boolean wifiIsEnabled=mWifiManager.isWifiEnabled();
  final TypedArray ta=getActivity().getTheme().obtainStyledAttributes(new int[]{R.attr.ic_wps});
  menu.add(Menu.NONE,MENU_ID_WPS_PBC,0,R.string.wifi_menu_wps_pbc).setIcon(ta.getDrawable(0)).setEnabled(wifiIsEnabled).setShowAsAction(MenuItem.SHOW_AS_ACTION_ALWAYS);
  menu.add(Menu.NONE,MENU_ID_ADD_NETWORK,0,R.string.wifi_add_network).setEnabled(wifiIsEnabled).setShowAsAction(MenuItem.SHOW_AS_ACTION_ALWAYS);
  ta.recycle();
}
